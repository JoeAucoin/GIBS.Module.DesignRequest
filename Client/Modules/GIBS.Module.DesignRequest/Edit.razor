    private async Task ConfirmNotifyClientAsync()
    {
        if (_clientReviewFile == null)
        {
            AddModuleMessage("No file selected.", MessageType.Warning);
            return;
        }
        if (string.IsNullOrWhiteSpace(_designRequest?.Email))
        {
            AddModuleMessage("Client email is missing on this design request.", MessageType.Warning);
            return;
        }

        try
        {
            _sendingClientEmail = true;

            // Refresh the latest record to avoid stale data
            var file = await DesignRequestService.GetFileToRequestAsync(_clientReviewFile.FileToRequestId, ModuleState.ModuleId);
            if (file == null)
            {
                AddModuleMessage("File not found.", MessageType.Error);
                CloseClientReviewPanel();
                return;
            }
            
            file.Description = _clientReviewFile.Description + Environment.NewLine + Environment.NewLine + "(Sent on " + DateTime.Now.ToLocalTime() + ")";  
            file.ApprovedForClientReview = true;
            await DesignRequestService.UpdateFileToRequestAsync(file);

            // Reload list so the checkbox state updates
            await LoadFileData();

            // Send email to client
            var recipientName = _designRequest.ContactName ?? _designRequest.ProjectName ?? "Client";
            var recipientEmail = _designRequest.Email;
            var replyToName = PageState.User?.DisplayName ?? "Project Manager";
            var replyToEmail = PageState.User?.Email ?? recipientEmail;
            var subject = $"File ready for review: {_designRequest.ProjectName}";
            var fileUrl = NavigationManager.ToAbsoluteUri(file.FilePath).ToString();

            var body = $@"
                <p>Hello {recipientName},</p>
                <p>A file has been prepared for your review for project <strong>{_designRequest.ProjectName}</strong>.</p>
                <p><strong>File:</strong> {file.Name}</p>
                <p><strong>Notes:</strong> {System.Net.WebUtility.HtmlEncode(_clientReviewFile.Description)}</p>
                
                <p>You can view/download it here: <a href=""{fileUrl}"">{fileUrl}</a></p>
                <p>Thank you.</p>
                <p> (Sent on  {DateTime.Now.ToLocalTime()})</p>";

            await DesignRequestService.SendHtmlEmailAsync(
                recipientName,
                recipientEmail,
                string.Empty,
                string.Empty,
                replyToName,
                replyToEmail,
                subject,
                body);

            AddModuleMessage("Client has been notified and the file was marked as approved.", MessageType.Success);
        }
        catch (Exception ex)
        {
            await logger.LogError(ex, "Error notifying client for file review: {Error}", ex.Message);
            AddModuleMessage("Error sending client notification.", MessageType.Error);
        }
        finally
        {
            CloseClientReviewPanel();
        }
    }

 
