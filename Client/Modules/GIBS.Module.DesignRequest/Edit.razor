    private async Task UseRevisionUserCredit()
    {
        if (_designRequest == null)
        {
            AddModuleMessage("Design request not loaded.", MessageType.Warning);
            return;
        }

        var userId = _designRequest.UserId ?? PageState.User?.UserId ?? 0;
        if (userId == 0)
        {
            AddModuleMessage("User not found for this request.", MessageType.Warning);
            return;
        }

        var nextRevisionNumber = (_designRequest.RevisionsUsed ?? 0) + 1;
        var totalCreditsSpent = (_designRequest.CreditsSpent ?? 0) + 1;

        // First two revisions are free: no debit, just increment the counter.
        if (nextRevisionNumber <= _revisionsAllowed)
        {
            _designRequest.RevisionsUsed = nextRevisionNumber;
            await DesignRequestService.UpdateDesignRequestAsync(_designRequest);
            AddModuleMessage($"Revision #{nextRevisionNumber} recorded (no credits deducted).", MessageType.Success);
            StateHasChanged();
            return;
        }

        // From revision 3 onward, require and deduct a credit.
        var userCredit = await DesignRequestService.GetUserCreditByUserAsync(ModuleState.ModuleId, userId);
        if (userCredit == null || userCredit.CreditBalance <= 0)
        {
            AddModuleMessage("Insufficient credits to use another revision.", MessageType.Warning);
            return;
        }
        _designRequest.CreditsSpent = totalCreditsSpent;
        userCredit.CreditBalance -= 1;
        await DesignRequestService.UpdateUserCreditAsync(userCredit);
        _userCredits = userCredit.CreditBalance;

        _designRequest.RevisionsUsed = nextRevisionNumber;
        await DesignRequestService.UpdateDesignRequestAsync(_designRequest);

        var tx = new CreditTransaction
        {
            UserId = userId,
            Credits = -1,
            Price = 0,
            TransactionType = "Revision",
            DesignRequestId = _designRequest.DesignRequestId,
            TransactionDate = DateTime.UtcNow,
            Notes = $"Revision credit used for DesignRequest {_designRequest.DesignRequestId}"
        };
        await DesignRequestService.AddCreditTransactionAsync(tx, ModuleState.ModuleId);

        AddModuleMessage($"Revision #{nextRevisionNumber} recorded. One credit deducted.", MessageType.Success);
        StateHasChanged();
    }

